# A3S Box TypeScript SDK - Justfile
# Most commands available via root: just test, just fmt, just lint

default:
    @just --list

# Build (TypeScript + native)
build:
    npm install && npm run build

# Build native module only
build-native:
    npm run build:native

# Clean all artifacts
clean:
    npm run clean
    rm -rf node_modules

# Run tests (this crate only)
test:
    cargo test -p a3s-box-sdk-ts --lib
