# A3S Box Python SDK - Justfile

# Default recipe
default:
    @just --list

# Build
build:
    cargo build -p a3s-box-sdk-python

# Build in release mode
build-release:
    cargo build -p a3s-box-sdk-python --release

# Run tests
test:
    cargo test -p a3s-box-sdk-python --lib

# Run tests with output
test-verbose:
    cargo test -p a3s-box-sdk-python --lib -- --nocapture

# Format code
fmt:
    cargo fmt -p a3s-box-sdk-python

# Check formatting
fmt-check:
    cargo fmt -p a3s-box-sdk-python -- --check

# Run clippy
lint:
    cargo clippy -p a3s-box-sdk-python --all-targets -- -D warnings

# Run clippy with fixes
lint-fix:
    cargo clippy -p a3s-box-sdk-python --all-targets --fix --allow-dirty

# Check compilation
check:
    cargo check -p a3s-box-sdk-python

# Generate documentation
doc:
    cargo doc -p a3s-box-sdk-python --no-deps --document-private-items

# Build wheel with maturin
wheel:
    maturin build --release

# Install in development mode
dev:
    maturin develop
